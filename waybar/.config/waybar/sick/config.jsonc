{
  "layer": "top",
  "position": "top",
  "height": 40,
  "margin-bottom": 0,
  "margin-top": 12,
  "margin-left": 12,
  "margin-right": 12,

  "modules-left": ["group/hardware", "hyprland/window"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["group/right"],

  "hyprland/workspaces": {
    "sort-by-name": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "active": "ÓÆ¥",
      "default": "ÔÑå"
},
    "persistent-workspaces": {
      "*": 5
    },
  },
  "hyprland/window": {
    "max-length": 200,
    "separate-outputs": true,
  },
  "tray": {
    "icon-size": 16,
    "spacing": 6,
  },
  "clock": {
    "locale": "C",
    "format": "{:%I:%M %p}",
    "format-alt": "ÔÅ≥ {:%a,%b %d}", // Icon: calendar-alt
    "tooltip": false,
  },
  "cpu": {
    "format": "Ôãõ&#8239; {usage}%",
    "tooltip": false,
    "on-click": "alacritty -e 'btop'",
  },
  "memory": {
    "interval": 30,
    "format": "ÔÉâ {used:0.2f}GB",
    "max-length": 10,
    "tooltip": false,
    "warning": 70,
    "critical": 90,
  },
  "network": {
    "interval": 2,
    "format-wifi": "Ôá´  {signalStrength}%",
    "format-ethernet": "Û∞àÄ",
    "format-linked": " {ipaddr}",
    "format-disconnected": "ÔÅ± Disconnected",
    "format-disabled": "",
    "tooltip": true,
    "max-length": 20,
    "min-length": 3,
    "tooltip-format": "{essid}",
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞",
    },
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{icon}&#8239;{percent}%",
    "format-icons": ["ÔÉ´", "ÔÉ´"],
    "on-scroll-down": "brightnessctl -c backlight set 1%-",
    "on-scroll-up": "brightnessctl -c backlight set +1%",
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
    "format-bluetooth-muted": "Ôë¶ {format_source}",
    "format-muted": "Ôë¶  {format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "üéß",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
    "on-click": "killall pavucontrol || pavucontrol",
  },
  "mpd": {
    "format": "{stateIcon} {artist} - {title}",
    "format-disconnected": "üé∂",
    "format-stopped": "‚ô™",
    "interval": 10,
    "consume-icons": {
      "on": "ÔÉÑ ", // Icon shows only when "consume" is on
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ", // Icon grayed out when "random" is off
      "on": "ÔÅ¥ ",
    },
    "repeat-icons": {
      "on": "ÔÄû ",
    },
    "single-icons": {
      "on": "ÔÄû1 ",
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã",
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
    "max-length": 35,
  },
  "custom/recorder": {
    "format": "ÔÄΩ Rec",
    "format-disabled": "ÔÄΩ Off-air", //An empty format will hide the module.
    "return-type": "json",
    "interval": 1,
    "exec": "echo '{\"class\": \"recording\"}'",
    "exec-if": "pgrep wf-recorder",
  },
  "custom/audiorec": {
    "format": "‚ô¨ Rec",
    "format-disabled": "‚ô¨ Off-air", //An empty format will hide the module.
    "return-type": "json",
    "interval": 1,
    "exec": "echo '{\"class\": \"audio recording\"}'",
    "exec-if": "pgrep ffmpeg",
  },
  "custom/waybar-mpris": {
    "return-type": "json",
    "exec": "waybar-mpris --autofocus --text-format=\"%i  [%p/%d] %a - %t\"",
    "on-click": "waybar-mpris --send toggle",
    // This option will switch between players on right click.
        "on-click-right": "waybar-mpris --send player-next",
    // The options below will switch the selected player on scroll
        // "on-scroll-up": "waybar-mpris --send player-next",
        // "on-scroll-down": "waybar-mpris --send player-prev",
    // The options below will go to next/previous track on scroll
        // "on-scroll-up": "waybar-mpris --send next",
        // "on-scroll-down": "waybar-mpris --send prev",
    "escape": true,
  },

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["cpu", "memory"],
  },

  "group/right": {
    "orientation": "horizontal",
    "modules": ["waybar-mpris", "network", "pulseaudio", "clock"],
  },
}
